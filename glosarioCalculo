"""

glosario_calculo_vectorial = {
    "Base": (
        "Una base es un conjunto de vectores linealmente independientes "
        "que generan un espacio vectorial."
    ),

    "Cambio_de_variables": (
        "Técnica que transforma integrales múltiples a sistemas de coordenadas "
        "más convenientes. Utiliza el determinante jacobiano como factor de escala."
    ),

    "Campo_conservativo": (
        "Un campo conservativo es un campo vectorial que puede expresarse como el "
        "gradiente de un potencial escalar. La integral de línea depende solo de los "
        "puntos inicial y final."
    ),

    "Campo_escalar": (
        "Un campo escalar asigna un número real a cada punto del espacio."
    ),

    "Campo_irrotacional": (
        "Un campo irrotacional es un campo vectorial cuyo rotacional es cero, lo que "
        "indica ausencia de giro local."
    ),

    "Campo_solenoidal": (
        "Un campo solenoidal es un campo vectorial cuya divergencia es cero. Representa "
        "la ausencia de fuentes y sumideros."
    ),

    "Campo_vectorial": (
        "Un campo vectorial asigna un vector a cada punto del espacio."
    ),

    "Circulacion": (
        "La circulación de un campo vectorial sobre una curva cerrada mide su tendencia "
        "a rotar alrededor de esa curva."
    ),

    "Componente": (
        "Cada una de las partes escalares que conforman un vector en una base dada."
    ),

    "Coordenadas_cilindricas": (
        "Sistema de coordenadas basado en (r, θ, z) que resulta útil para simetrías "
        "circulares."
    ),

    "Coordenadas_esfericas": (
        "Sistema de coordenadas basado en (ρ, θ, φ), adecuado para simetrías radiales."
    ),

    "Curva_parametrica": (
        "Representación de una curva mediante funciones que dependen de un parámetro."
    ),

    "Divergencia": (
        "La divergencia mide la tasa de expansión o compresión de un campo vectorial."
    ),

    "Flujo": (
        "El flujo mide la cantidad de campo vectorial que atraviesa una superficie dada."
    ),

    "Gradiente": (
        "El gradiente de un campo escalar produce un campo vectorial que indica dirección "
        "y rapidez del mayor incremento."
    ),

    "Integral_de_linea": (
        "Integral que evalúa un campo a lo largo de una curva."
    ),

    "Integral_de_superficie": (
        "Integral que evalúa un campo sobre una superficie bidimensional."
    ),

    "Integral_triple": (
        "Integral que evalúa funciones en volúmenes tridimensionales."
    ),

    "Jacobiano": (
        "Determinante que aparece en cambios de variables para ajustar factores de escala."
    ),

    "Magnitud": (
        "Longitud o tamaño de un vector."
    ),

    "Normal": (
        "Vector perpendicular a una superficie."
    ),

    "Producto_cruz": (
        "Operación entre dos vectores en R³ que produce un tercer vector perpendicular "
        "a ambos."
    ),

    "Producto_punto": (
        "Operación que mide el grado de alineación entre dos vectores, generando un escalar."
    ),

    "Proyeccion": (
        "Sombra de un vector sobre otro."
    ),

    "Rotacional": (
        "Indica la tendencia de un campo vectorial a girar alrededor de un punto."
    ),

    "Superficie_parametrica": (
        "Superficie descrita mediante dos parámetros independientes."
    ),

    "Teorema_de_Stokes": (
        "Relaciona la circulación de un campo vectorial alrededor de una curva con el "
        "rotacional sobre la superficie que la delimita."
    ),

    "Teorema_de_Gauss": (
        "Afirma que el flujo neto de un campo a través de una superficie cerrada es igual "
        "a la integral de la divergencia en el volumen."
    ),

    "Teorema_de_Green": (
        "Relaciona una integral de línea en 2D con una integral doble sobre una región plana."
    ),

    "Vector_unitario": (
        "Vector con magnitud igual a 1 que indica dirección."
    ),
}

