glosarioCalculo= {
    "Base": (
        "Una base es un conjunto de vectores linealmente independientes "
        "que generan un espacio vectorial."
    ),

    "Cambio_de_variables": (
        "Técnica que transforma integrales múltiples a sistemas de coordenadas "
        "más convenientes. Utiliza el determinante jacobiano como factor de escala."
    ),

    "Campo_conservativo": (
        "Un campo conservativo es un campo vectorial que puede expresarse como el "
        "gradiente de un potencial escalar. La integral de línea depende solo de los "
        "puntos inicial y final."
    ),

    "Campo_escalar": (
        "Un campo escalar asigna un número real a cada punto del espacio."
    ),

    "Campo_irrotacional": (
        "Un campo irrotacional es un campo vectorial cuyo rotacional es cero, lo que "
        "indica ausencia de giro local."
    ),

    "Campo_solenoidal": (
        "Un campo solenoidal es un campo vectorial cuya divergencia es cero. Representa "
        "la ausencia de fuentes y sumideros."
    ),

    "Campo_vectorial": (
        "Un campo vectorial asigna un vector a cada punto del espacio."
    ),

    "Circulacion": (
        "La circulación de un campo vectorial sobre una curva cerrada mide su tendencia "
        "a rotar alrededor de esa curva."
    ),

    "Coordenadas_cilindricas": (
        "Sistema de coordenadas basado en radio, ángulo y altura."
    ),

    "Coordenadas_esfericas": (
        "Sistema de coordenadas que describe un punto mediante una distancia al origen "
        "y dos ángulos."
    ),

    "Coordenadas_polares": (
        "Representación de puntos del plano mediante radio y ángulo."
    ),

    "Curva_parametrica": (
        "Una curva paramétrica es una función vectorial que describe una trayectoria "
        "en el plano o en el espacio."
    ),

    "Curvatura": (
        "La curvatura mide qué tanto cambia la dirección del vector tangente con "
        "respecto a la longitud de arco."
    ),

    "Derivada_direccional": (
        "La derivada direccional mide la tasa de cambio de una función escalar en una "
        "dirección específica."
    ),

    "Derivada_parcial": (
        "La derivada parcial mide la tasa de cambio de una función respecto a una variable, "
        "manteniendo las demás constantes."
    ),

    "Divergencia": (
        "La divergencia mide la tendencia de un campo vectorial a 'salir' o 'entrar' "
        "de un punto."
    ),

    "Flujo_de_un_campo": (
        "El flujo mide cuánto de un campo vectorial atraviesa una superficie dada."
    ),

    "Gradiente": (
        "El gradiente de un campo escalar es un vector que indica la dirección de máximo "
        "crecimiento de la función."
    ),

    "Hessiano": (
        "El Hessiano es una matriz cuadrada que contiene todas las segundas derivadas "
        "parciales de una función."
    ),

    "Integral_de_linea": (
        "La integral de línea evalúa funciones vectoriales o escalares a lo largo de una curva."
    ),

    "Integral_doble": (
        "Una integral doble calcula el valor acumulado de un campo escalar en una región 2D."
    ),

    "Integral_triple": (
        "Una integral triple calcula el acumulado de una función en un volumen tridimensional."
    ),

    "Jacobiano": (
        "El jacobiano es la matriz de derivadas parciales de una función vectorial. "
        "Su determinante representa el factor de escala en cambios de variables."
    ),

    "Longitud_de_arco": (
        "La longitud de arco mide la distancia total recorrida a lo largo de una curva."
    ),

    "Marco_de_Frenet_Serret": (
        "Sistema ortonormal formado por los vectores tangente, normal y binormal que "
        "describe la geometría local de una curva espacial."
    ),

    "Magnitud": (
        "La magnitud de un vector es su longitud total, calculada como la raíz cuadrada "
        "de la suma de los cuadrados de sus componentes."
    ),

    "Normal_de_superficie": (
        "Vector perpendicular a una superficie en cada punto, útil para flujos e integrales."
    ),

    "Ortogonalidad": (
        "Dos vectores son ortogonales si su producto escalar es cero, es decir, forman "
        "90 grados entre sí."
    ),

    "Plano_tangente": (
        "El plano tangente es la mejor aproximación lineal a una superficie en un punto específico."
    ),

    "Potencial_escalar": (
        "Función cuyo gradiente genera un campo conservativo."
    ),

    "Producto_escalar": (
        "Operación entre dos vectores que produce un número real. Útil para calcular proyecciones "
        "y ángulos."
    ),

    "Producto_vectorial": (
        "Operación entre dos vectores en R³ que produce un tercer vector perpendicular a ambos."
    ),

    "Proyección_vectorial": (
        "La proyección vectorial representa la componente de un vector sobre otro."
    ),

    "Regla_de_la_cadena_multivariable": (
        "Método para derivar funciones compuestas que dependen de múltiples variables."
    ),

    "Rotacional": (
        "El rotacional mide la tendencia de un campo vectorial a rotar alrededor de un punto."
    ),

    "Superficie_parametrica": (
        "Superficie definida por una función de dos parámetros que generan coordenadas 3D."
    ),

    "Torsion": (
        "La torsión de una curva espacial indica cuánto se desvía del plano osculador."
    ),

    "Vector": (
        "Entidad matemática con magnitud y dirección usada para describir desplazamientos, fuerzas, etc."
    ),

    "Vector_unitario": (
        "Vector con magnitud igual a 1, usado para representar direcciones puras."
    )
