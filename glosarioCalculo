glosario_calculo_vectorial = {
    "Base": (
        "Una base es un conjunto de vectores linealmente independientes "
        "que generan un espacio vectorial."
    ),

    "Cambio_de_variables": (
        "Técnica que transforma integrales múltiples a sistemas de coordenadas "
        "más convenientes. Usa el jacobiano como factor de escala."
    ),

    "Campo_conservativo": (
        "Un campo conservativo es aquel que puede expresarse como el gradiente "
        "de un potencial escalar."
    ),

    "Campo_escalar": (
        "Asigna un número real a cada punto del espacio."
    ),

    "Campo_irrotacional": (
        "Campo cuyo rotacional es cero, indicando ausencia de giro."
    ),

    "Campo_solenoidal": (
        "Campo vectorial cuya divergencia es cero; sin fuentes ni sumideros."
    ),

    "Campo_vectorial": (
        "Asigna un vector a cada punto del espacio."
    ),

    "Circulacion": (
        "Mide la tendencia de un campo a girar alrededor de una curva cerrada."
    ),

    "Coordenadas_cilindricas": (
        "Sistema de coordenadas basado en (r, θ, z)."
    ),

    "Coordenadas_esfericas": (
        "Sistema basado en (ρ, θ, φ)."
    ),

    "Curva_parametrica": (
        "Una curva descrita mediante funciones dependientes de un parámetro."
    ),

    "Divergencia": (
        "Mide la expansión o compresión de un campo vectorial."
    ),

    "Flujo": (
        "Cantidad de campo vectorial que atraviesa una superficie."
    ),

    "Gradiente": (
        "Dirección de máximo crecimiento de un campo escalar."
    ),

    "Integral_de_linea": (
        "Evalúa un campo escalar o vectorial sobre una curva."
    ),

    "Integral_de_superficie": (
        "Evalúa un campo sobre una superficie parametrizada."
    ),

    "Integral_triple": (
        "Evalúa funciones dentro de volúmenes tridimensionales."
    ),

    "Jacobiano": (
        "Determinante que actúa como factor de escala en cambios de coordenadas."
    ),

    "Magnitud": (
        "Longitud o tamaño de un vector, calculada como la raíz cuadrada del "
        "sumatorio de los cuadrados de sus componentes."
    ),

    "Normal": (
        "Vector perpendicular a una superficie."
    ),

    "Producto_cruz": (
        "Operación vectorial que produce un vector perpendicular a dos vectores dados."
    ),

    "Producto_punto": (
        "Operación que mide la alineación de dos vectores."
    ),

    "Proyeccion": (
        "Proyección o sombra de un vector sobre otro."
    ),

    "Rotacional": (
        "Mide la tendencia a rotar de un campo vectorial."
    ),

    "Superficie_parametrica": (
        "Superficie descrita mediante dos parámetros."
    ),

    "Teorema_de_Stokes": (
        "Relaciona la circulación de un campo con el rotacional sobre una superficie."
    ),

    "Teorema_de_Gauss": (
        "El flujo neto de un campo sobre una superficie cerrada iguala la "
        "integral de la divergencia dentro del volumen."
    ),

    "Teorema_de_Green": (
        "Relaciona integrales de línea con integrales dobles en regiones planas."
    ),

    "Vector_unitario": (
        "Vector de longitud 1 que indica dirección."
    ),
}
